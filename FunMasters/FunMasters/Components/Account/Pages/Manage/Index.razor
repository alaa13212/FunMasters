@page "/Account/Manage"

@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager

<PageTitle>Profile</PageTitle>

<h3>Profile</h3>
<StatusMessage/>

<EditForm Model="Input" FormName="profile" OnValidSubmit="OnValidSubmitAsync" method="post">
    <div class="row">
        <div class="col-xl-6">
            <DataAnnotationsValidator/>
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.Login" id="Input.Login" class="form-control" placeholder="Enter your login"/>
                <label for="Input.Login" class="form-label">Login</label>
                <ValidationMessage For="() => Input.Login" class="text-danger"/>
            </div>
            <div class="form-floating mb-3">
                <InputText type="text" @bind-Value="@Input.DisplayName" id="username" class="form-control" placeholder="Choose your display name."/>
                <label for="username" class="form-label">Display Name</label>
                <ValidationMessage For="() => Input.DisplayName" class="text-danger"/>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </div>
        <div class="col-xl-6">
            <div class="my-2 d-flex justify-content-center">
                <img src="@Input.ProfileImageUrl" alt="Profile Image" style="max-width: 120px; border-radius: 50%;" />
            </div>
            
            @if(user != null)
            {
                <ProfileImageUploader UserId="user.Id"/>
            }
        </div>
    </div>
</EditForm>

@code {
    private ApplicationUser? user;
    private string? login;
    private string? username;

    [CascadingParameter] private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm] private InputModel Input { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        user = await UserAccessor.GetRequiredUserAsync(HttpContext);
        login = await UserManager.GetEmailAsync(user);
        username = await UserManager.GetUserNameAsync(user);

        Input.Login ??= login;
        Input.DisplayName ??= username;
        Input.ProfileImageUrl = $"/uploads/{user.Id:n}";
    }

    private async Task OnValidSubmitAsync()
    {
        if(user == null)
            return;
        
        if (Input.Login != login)
        {
            var result = await UserManager.SetEmailAsync(user, Input.Login);
            if (!result.Succeeded)
            {
                RedirectManager.RedirectToCurrentPageWithStatus("Error: Failed to set login.", HttpContext);
            }
        }
        
        if (Input.DisplayName != username)
        {
            var result = await UserManager.SetUserNameAsync(user, Input.DisplayName);
            if (!result.Succeeded)
            {
                RedirectManager.RedirectToCurrentPageWithStatus("Error: Failed to set display name.", HttpContext);
            }
        }

        await SignInManager.RefreshSignInAsync(user);
        RedirectManager.RedirectToCurrentPageWithStatus("Your profile has been updated", HttpContext);
    }

    private sealed class InputModel
    {
        public string? DisplayName { get; set; }
        public string? Login { get; set; }
        public string ProfileImageUrl { get; set; } = "";
    }

}