@page "/Admin/ChangeUserPassword/{UserId:guid}"
@attribute [Authorize(Roles = "Admin")]
@using System.ComponentModel.DataAnnotations
@inject UserManager<ApplicationUser> UserManager
@inject ILogger<ChangeUserPassword> Logger

<h3>Change User Password</h3>

@if (successMessage is not null)
{
    <div class="alert alert-success">@successMessage</div>
}
else if (errorMessage is not null)
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (targetUser is null)
{
    <p>Loading user information...</p>
}
else
{
    <p><strong>User:</strong> @targetUser.UserName (@targetUser.Email)</p>

    <EditForm Model="Input" OnValidSubmit="HandleChangePassword">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label>New Password</label>
            <InputText @bind-Value="Input.NewPassword" type="password" class="form-control" />
        </div>

        <div class="form-group mt-2">
            <label>Confirm Password</label>
            <InputText @bind-Value="Input.ConfirmPassword" type="password" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Set New Password</button>
    </EditForm>
}

@code {
    [Parameter] public Guid UserId { get; set; }

    private ApplicationUser? targetUser;
    private string? successMessage;
    private string? errorMessage;

    private ResetPasswordModel Input { get; set; } = new();

    public class ResetPasswordModel
    {
        [Required, DataType(DataType.Password)]
        public string NewPassword { get; set; } = string.Empty;

        [Required, DataType(DataType.Password)]
        [Compare(nameof(NewPassword), ErrorMessage = "Passwords do not match.")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    protected override async Task OnInitializedAsync()
    {
        targetUser = await UserManager.FindByIdAsync(UserId.ToString());
        if (targetUser == null)
            errorMessage = "User not found.";
    }

    private async Task HandleChangePassword()
    {
        if (targetUser == null)
            return;

        var token = await UserManager.GeneratePasswordResetTokenAsync(targetUser);
        var result = await UserManager.ResetPasswordAsync(targetUser, token, Input.NewPassword);

        if (result.Succeeded)
        {
            targetUser.RequirePasswordChange = true;
            await UserManager.UpdateAsync(targetUser);

            Logger.LogInformation("Admin changed password for user {UserId}", targetUser.Id);
            successMessage = $"Password changed successfully for {targetUser.UserName}.";
        }
        else
        {
            errorMessage = string.Join(", ", result.Errors.Select(e => e.Description));
        }
    }
}
