@page "/admin/users/edit/{id}"

@attribute [Authorize(Roles = "Admin")]
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole<Guid>> RoleManager
@inject NavigationManager Nav

<PageTitle>Edit User</PageTitle>

<div class="m-5">
    <h3 class="text-2xl text-center md-5">Edit User</h3>

    <div class="card bg-base-200 shadow-sm">
        <div class="card-body">

            @if (user == null)
            {
                <p><em>Loading...</em></p>
            }
            else
            {
                <EditForm Model="user" OnValidSubmit="HandleValidSubmit" class="flex flex-col gap-4 w-sm">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <label class="floating-label">
                        <span>Cycle Order</span>
                        <InputNumber class="input" @bind-Value="user.CycleOrder" />
                    </label>

                    <label class="floating-label">
                        <span>Email</span>
                        <InputText class="input" @bind-Value="user.Email" />
                    </label>

                    <label class="floating-label">
                        <span>Display Name</span>
                        <InputText class="input" @bind-Value="user.UserName" />
                    </label>
                    
                    <label class="floating-label">
                        <span>Role</span>
                        <InputSelect class="select" @bind-Value="selectedRole">
                            <option value="Member">Member</option>
                            <option value="Admin">Admin</option>
                        </InputSelect>
                    </label>

                    <div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <button class="btn btn-secondary ms-2" @onclick="@(() => Nav.NavigateTo("/admin/users"))">Cancel</button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string? Id { get; set; }
    private ApplicationUser? user;
    private string selectedRole = "";
    private List<string> roles = new();

    protected override async Task OnInitializedAsync()
    {
        if (Id is null)
        {
            Nav.NavigateTo("/admin/users");
            return;
        }

        user = await UserManager.FindByIdAsync(Id);
        if (user == null)
        {
            Nav.NavigateTo("/admin/users");
            return;
        }

        roles = RoleManager.Roles.Select(r => r.Name!).ToList();
        var currentRoles = await UserManager.GetRolesAsync(user);
        selectedRole = currentRoles.FirstOrDefault() ?? "Member";
    }

    private async Task HandleValidSubmit()
    {
        if (user is null) return;

        await UserManager.UpdateAsync(user);

        // Update role
        var currentRoles = await UserManager.GetRolesAsync(user);
        await UserManager.RemoveFromRolesAsync(user, currentRoles);
        if (!string.IsNullOrEmpty(selectedRole))
            await UserManager.AddToRoleAsync(user, selectedRole);

        Nav.NavigateTo("/admin/users");
    }
}
